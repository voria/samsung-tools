# Contributor: Fortunato Ventre (voRia) <vorione@gmail.com>

pkgname=samsung-tools
pkgver=1.2
pkgrel=2
pkgdesc="Tools for Samsung netbooks"
arch=('any')
url="https://launchpad.net/samsung-tools"
license=('GPLv3')
depends=('pm-utils' 'xbindkeys' 'rfkill' 'dbus-python' 'easy-slow-down-manager' 'python-notify')
optdepends=('phc-intel: for CPU undervolting')
backup=(etc/samsung-tools/system.conf
        etc/samsung-tools/session.conf)
install=samsung-tools.install
source=(http://launchpad.net/samsung-tools/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz samsung-tools.rcd fix_shebangs.patch)
md5sums=('134acc6c3744c7f2af2e0f90e1460929' '60e9ef24018192c6475c59cd7ce99a7b' '6e409f164942008270ecaf7e50a7adf0')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -p1 -i "$srcdir/fix_shebangs.patch" || return 1

  make DESTDIR="$pkgdir/" install || return 1
  install -D -m755 "${srcdir}/samsung-tools.rcd" "${pkgdir}/etc/rc.d/samsung-tools" || return 1
}

